@charset 'utf-8'

javascript = #F15501
css = #1F085E

orange = #EB581A

* 
  box-sizing border-box


body 
  background #f2f2f2
  background radial-gradient(#F2F2F2,#EEE)
  font-family 'consolas' , 'deja vu sans mono',"lucida grande", "verdana", "arial", sans-serif


.main 
  max-width 1200px
  margin 0 auto


h1, h3 
  color orange   
  font-weight normal

.third-block
  display inline-block
  position relative
  vertical-align top
  width 30%
  margin-right 2%
  margin-bottom 2%
  padding 1em

.our-projects > article 
  background #fff
  text-align left
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  border-radius 2px
  @extend .third-block
  h3  
    position absolute
    margin 0
    background rgba(255, 255, 255, 0.8)
    padding 0.2em 0.5em
    font-size 1.5em
    &:before 
      content ''
      display block
      position absolute
      right 0
      top 0
      border 0.3em solid rgba(0, 0, 0, 0)
      border-right-color orange
      border-top 0  

  .picture 
    transition all 0.2s
    max-height 80px
    overflow hidden
    img 
      width 100%

  .content 
    clear both  
    max-height 12em
    overflow hidden
    position relative
    margin-bottom 0
    transition all 0.2s
    &:after
      display block
      position absolute
      right 0
      bottom 0
      left 0
      height 2em
      background linear-gradient(transparent, #fff)
      -webkit-transition all 0.2s

.download-link 
  display inline-block
  background #fff
  border 1px solid orange
  color orange
  text-decoration none
  font-size 0.8em
  padding 0.3em 0.5em
  margin-bottom 10px
  border-radius 3px
  transition all 0.1s
  &:hover 
    background orange
    color #fff
    text-decoration none
  &:active, &:focus 
    box-shadow inset 0 5px 20px rgba(0,0,0,0.1),  inset 0 1px 0 rgba(0,0,0,0.1)



.technologies 
  position relative
  clear both
  height 6px
  padding 0
  margin 0
  margin-top 6px
  margin-bottom 10px
  border-radius 3px
  overflow hidden
  text-align right
  overflow hidden
  background #555
  li
    display inline-block
    vertical-align top
    height 100%
    font-size 0.8
    margin 0
    &.javascript
      background-color javascript
    &.css
      background-color css
  &:after
    content ''
    position: absolute
    top 0
    left 0
    right 0
    bottom 0
    display block
    background linear-gradient(rgba(255,255,255,0.4), transparent)


face-size = 50px
.faces-list 
  margin 0
  padding 0
.faces-list > li
  @extend .third-block
  .picture
    background #fff
    width face-size 
    height face-size
    display inline-block
    vertical-align middle
    border-radius 50%
    overflow hidden
    margin-right 1em
    box-shadow 0 -1px 1px rgba(0, 0, 0, 0.2)
    img
      max-width face-size
  .name
    display inline-block
    font-size 1.2em
    color orange
    text-decoration none
