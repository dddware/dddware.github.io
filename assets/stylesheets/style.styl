@charset 'utf-8'

@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700')


javascript = #F15501
css = #1F085E
orange = javascript
headerHeight = 5.4em

* 
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box


body 
  margin 0
  padding-top headerHeight
  background #f2f2f2
  background radial-gradient(#F2F2F2,#eee)
  font-size 14px
  font-family 'Open sans','Calibri', "arial", sans-serif


.container, 
header,
section 
  position relative
  max-width 960px
  margin 0 auto
.main
  margin 0 auto  
  max-width 960px
.main > section .container
  margin 0 auto
  padding 0

section
  display none
  &.active
    display block

header
  height headerHeight
  position fixed
  z-index 1
  padding 1em 1em
  top 0
  left 0
  right 0
  margin-bottom 0
  background #fff
  border 1px solid #ccc
  border-top 0
  h1
    margin 3px
  nav 
    ul
      margin 0
      padding 0
      text-align right
      position absolute
      display block
      right 20px
      top 20px
  li 
    display inline-block
    margin-left 10px
    a
      display block
      padding 0.4em 1em
      background #fff 
      color orange
      text-decoration none
      border 1px solid #ddd
      border-radius 3px
      transition all 0.2s
      &:hover,
      &:focus
        background orange
        border 1px solid darken(orange,5)
        color #fff
      &:active
        background #ddd
        border 1px solid #ccc
        color #999
      &.active
        cursor default
        background #fff
        border 1px solid transparent
        color orange
  

h1, h3 
  color orange   
  font-weight normal
  a
    text-decoration none
    color orange 
h2
  color #333
  color rgba(0,0,0,0.5)
  padding-left 1em
h3 
  margin-top 0

    
.jumper
  display inline-block
  position relative
  vertical-align top
  width 100%
  overflow hidden
  padding 0.8em 1em
  padding-bottom 0.5em


.repositories 
  article 
    position relative
    padding-left 42%
    height 3.4em
    background #fff
    text-align left
    border-bottom 1px solid #FFD4BD
    -webkit-transition all 0.2s
    transition all 0.2s
    &:hover
      height 7em
    &:nth-child(odd)
      background #FFF0E8
    &:nth-child(1)
      border-top 1px solid #FFD4BD
  &.large article:hover
    height 12em
  h3  
    position absolute
    left 0.4em
    top 0.4em
    margin 0
    padding 0 0.5em
    font-size 1.5em

.technologies 
  position relative
  clear both
  height 6px
  padding 0
  margin 0
  margin-top 10px
  margin-bottom 26px
  border-radius 3px
  overflow hidden
  text-align right
  overflow hidden
  background #555
  opacity 0.9
  li
    display inline-block
    vertical-align top
    height 100%
    margin 0
    &.javascript
      background-color javascript
    &.css
      background-color css
.download-link 
  display inline-block
  float left
  background #fff
  border 1px solid orange
  color orange
  text-decoration none
  font-size 0.8em
  padding 0.3em 0.5em
  margin 0 10px 10px 0
  border-radius 3px
  transition all 0.1s
  &:hover 
    background orange
    color #fff
    text-decoration none
  &:active, &:focus 
    box-shadow inset 0 5px 20px rgba(0,0,0,0.1),  inset 0 1px 0 rgba(0,0,0,0.1)



progress
  -moz-appearance none
  -webkit-appearance none
  appearance none
  width 100%
  height 6px
  padding 0
  margin 0
  margin-top 10px
  margin-bottom 10px
  border 0
  border-radius 3px
  overflow hidden
  text-align right
  overflow hidden
  background #ccc
  &::-webkit-progress-value
    background-color orange
  &::-moz-progress-bar
    background-color orange
  &::progress-bar
    background-color orange

section.faces
  background orange
  max-width 100%
  margin 0
  margin-top 20px
  padding: 2em
  color #fff
  border-radius 3px
  a
    color #fff

face-size = 120px
.faces-list 
  margin 0
  padding 20px
  list-style none
.faces-list li
  display inline-block
  vertical-align top
  width (100/3)%
  margin-bottom 20px
  text-align center
  .picture
    background #fff
    width face-size 
    height face-size
    vertical-align middle
    border-radius 50%
    overflow hidden
    margin auto
    margin-bottom 20px
    img
      max-width face-size
  .name
    text-decoration none

@media (max-width: 1000px)
  .fourth-block
    width (100/3)%
@media (max-width: 800px)
  body
    padding-top 7em
  header
    height 7em
    h1
      text-align center
  .repositories article
    padding 1em
    h3
      position static
      margin-top -0.2em
      maring-bottom 1em
    &:hover
      height 9em
    &.large:hover
      height 12em
  header nav
    position absolute
    right 0
    left 0
    bottom -1px
    ul
      position static
      text-align center
      li
        display inline-block
        a
          background none
          border-bottom 0
          border-radius 3px 3px 0 0
          &.active
            background none
  .faces-list li
    width 100%
    margin-bottom 2em